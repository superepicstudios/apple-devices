{
    "description": "Apple Device Frontend",
    "author": "Super Epic Studios, LLC",
    "tasks": {
        "tz": "export TZ=UTC",
        "build": "vitepress build",
        "dev": {
            "dependencies": ["tz"],
            "command": "NODE_ENV=development && vitepress dev ."
        },
        "start": {
            "dependencies": [
                "tz", 
                "build"
            ],
            "command": "vitepress preview --port 5173"
        }
    },
    "imports": {
        "vitepress": "npm:vitepress@^1.6.3",
        "vue": "npm:vue@^3.5.17"
    }
}