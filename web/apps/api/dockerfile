FROM denoland/deno:alpine AS build
WORKDIR /app
COPY . .
RUN deno install --allow-scripts
RUN deno cache ./web/apps/api/src/main.ts

FROM denoland/deno:alpine AS run
USER deno
WORKDIR /app
COPY --from=build /app .
WORKDIR /app/web/apps/api
ENV NODE_ENV=production
EXPOSE 3000
CMD ["deno", "task", "start"]