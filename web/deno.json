{
    "workspace": [
        "apps/api",
        "apps/www",
        "pkgs/types",
        "pkgs/utils"
    ],
    "tasks": {
        "api": "deno task --cwd apps/api dev",
        "www": "deno task --cwd apps/www dev"
    },
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true
    },
    "lint": {
        "rules": {
            "exclude": [
                "no-namespace",
                "no-explicit-any",
                "require-await"
            ]
        }
    },
    "nodeModulesDir": "auto",
    "unstable": ["detect-cjs"]
}